{

  "manifest_version": 2,
  "name": "EmailFinder",
  "version": "1.0",

  "description": "Collects emails on pages you visit",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["collect.js"]
    }
  ],

  "permissions": [
    "clipboardWrite",
    "storage",
    "activeTab",
    "unlimitedStorage"
  ],

  "browser_action": {
    "default_title": "EmailFinder",
    "default_popup": "popup/popup.html"
  }

}
