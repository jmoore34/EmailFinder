{

  "manifest_version": 2,
  "name": "EmailFinder",
  "version": "1.1",

  "description": "Finds and stores emails on pages you visit",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["collect.js"]
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "unlimitedStorage"
  ],

  "browser_action": {
    "default_title": "EmailFinder",
    "default_popup": "popup/popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{1218bc46-2f71-40b7-bb61-89c41adade45}"
    }
  }


}
